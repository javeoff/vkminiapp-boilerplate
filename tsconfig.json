{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "es5",
    "sourceMap": true,
    "module": "esnext",
    "baseUrl": ".",
    "paths": {
      "@main/*": [
        "src/*"
      ],
      "@bridge/*": [
        "src/common/bridge/*"
      ],
      "@common/*": [
        "src/common/*"
      ],
      "@public/*": [
        "public/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@pages/*": [
        "src/pages/*"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
  },
  "exclude": [
    "node_modules"
  ]

}